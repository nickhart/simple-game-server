<h1>Create New Game Session</h1>

<%= form_with(model: @game_session, scope: :game_session, local: true) do |f| %>
  <% if @game_session.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game_session.errors.count, "error") %> prohibited this game from being created:</h2>
      <ul>
        <% @game_session.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :min_players, "Minimum Players (2-10)" %>
    <%= f.number_field :min_players, in: 2..10, value: 2 %>
  </div>

  <div class="field">
    <%= f.label :max_players, "Maximum Players (2-10)" %>
    <%= f.number_field :max_players, in: 2..10, value: 4 %>
  </div>

  <div class="actions">
    <%= f.submit "Create Game" %>
  </div>
<% end %>

<%= link_to "Back to Games List", game_sessions_path %>
