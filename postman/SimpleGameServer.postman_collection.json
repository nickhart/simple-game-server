{
    "info": {
        "name": "SimpleGameServer API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3000",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Game Configurations",
            "item": [
                {
                    "name": "Update Game Configuration",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{{update_game_config_body}}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/games/{{game_configuration_id}}",
                            "host": ["{{base_url}}"],
                            "path": ["api", "games", "{{game_configuration_id}}"]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('Status code is 200', function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test('Schema field is stored and looks correct', function () {",
                                    "    const response = pm.response.json();",
                                    "    pm.expect(response.state_json_schema).to.be.a('string');",
                                    "    pm.expect(response.state_json_schema).to.include('\"properties\"');",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ]
                }
                ,
                {
                    "name": "List Game Configurations",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/games",
                            "host": ["{{base_url}}"],
                            "path": ["api", "games"]
                        }
                    }
                },
                {
                    "name": "Get Game Configuration",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/games/{{game_configuration_id}}",
                            "host": ["{{base_url}}"],
                            "path": ["api", "games", "{{game_configuration_id}}"]
                        }
                    }
                },
                {
                    "name": "Create Game Configuration",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{{create_game_config_body}}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/games",
                            "host": ["{{base_url}}"],
                            "path": ["api", "games"]
                        }
                    }
                },
                {
                    "name": "Delete Game Configuration",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/games/{{game_configuration_id}}",
                            "host": ["{{base_url}}"],
                            "path": ["api", "games", "{{game_configuration_id}}"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Register New User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"user\": {\n        \"email\": \"{{api_email}}\",\n        \"password\": \"{{api_password}}\",\n        \"password_confirmation\": \"{{api_password}}\"\n    }\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/players",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "players"
                            ]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('Status code is 201', function () {",
                                    "    pm.response.to.have.status(201);",
                                    "});",
                                    "",
                                    "pm.test('Response contains token', function () {",
                                    "    const response = pm.response.json();",
                                    "    pm.expect(response.token).to.be.a('string');",
                                    "    pm.expect(response.token).to.not.be.empty;",
                                    "});",
                                    "",
                                    "// Save the token for future requests",
                                    "const response = pm.response.json();",
                                    "if (response && response.token) {",
                                    "    pm.environment.set('jwt_token', response.token);",
                                    "    console.log('Token saved to environment');",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ]
                },
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "prerequest",
                            "script": {
                                "exec": [
                                    "// Debug environment variables",
                                    "console.log('Environment:', pm.environment.name);",
                                    "console.log('api_email value:', pm.environment.get('api_email'));",
                                    "console.log('api_password value:', pm.environment.get('api_password'));",
                                    "",
                                    "// Debug request body",
                                    "const rawBody = pm.request.body.raw;",
                                    "console.log('Raw request body:', rawBody);",
                                    "",
                                    "// Debug variable resolution",
                                    "const resolvedBody = pm.variables.replaceIn(rawBody);",
                                    "console.log('Resolved request body:', resolvedBody);"
                                ],
                                "type": "text/javascript"
                            }
                        },
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('Status code is 200', function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test('Response contains token', function () {",
                                    "    const response = pm.response.json();",
                                    "    pm.expect(response.token).to.be.a('string');",
                                    "    pm.expect(response.token).to.not.be.empty;",
                                    "});",
                                    "",
                                    "pm.test('Response contains user info', function () {",
                                    "    const response = pm.response.json();",
                                    "    pm.expect(response.user).to.be.an('object');",
                                    "    pm.expect(response.user.email).to.eql(pm.environment.get('api_email'));",
                                    "});",
                                    "",
                                    "// Save the token for future requests",
                                    "const response = pm.response.json();",
                                    "if (response && response.token) {",
                                    "    pm.environment.set('jwt_token', response.token);",
                                    "    console.log('Token saved to environment');",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"{{api_email}}\",\n    \"password\": \"{{api_password}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/sessions",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "sessions"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Players",
            "item": [
                {
                    "name": "Get Current Player",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/players/current",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "players",
                                "current"
                            ]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "const response = pm.response.json();",
                                    "if (response && response.id) {",
                                    "    pm.environment.set('player_id', response.id);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ]
                },
                {
                    "name": "Create Player",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Test Player\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/players",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "players"
                            ]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "const response = pm.response.json();",
                                    "if (response && response.id) {",
                                    "    pm.environment.set('player_id', response.id);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ]
                },
                {
                    "name": "Get Player",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/players/{{player_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "players",
                                "{{player_id}}"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Game Sessions",
            "item": [
                {
                    "name": "Create Game Session",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"game_session\": {\n        \"min_players\": 2,\n        \"max_players\": 4\n    }\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/game_sessions/create/{{player_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "game_sessions",
                                "create",
                                "{{player_id}}"
                            ]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "const response = pm.response.json();",
                                    "if (response && response.id) {",
                                    "    pm.environment.set('game_session_id', response.id);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ]
                },
                {
                    "name": "Join Game Session",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/game_sessions/{{game_session_id}}/join/{{player_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "game_sessions",
                                "{{game_session_id}}",
                                "join",
                                "{{player_id}}"
                            ]
                        }
                    }
                },
                {
                    "name": "Start Game Session",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/game_sessions/{{game_session_id}}/start",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "game_sessions",
                                "{{game_session_id}}",
                                "start"
                            ]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"player_id\": \"{{player_id}}\"\n}"
                        }
                    }
                },
                {
                    "name": "Get Game Session",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/game_sessions/{{game_session_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "game_sessions",
                                "{{game_session_id}}"
                            ]
                        }
                    }
                },
                {
                    "name": "Update Game State",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"game_session\": {\n        \"state\": {\n            \"board\": [1, 0, 0, 0, 0, 0, 0, 0, 0]\n        }\n    }\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/game_sessions/{{game_session_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "game_sessions",
                                "{{game_session_id}}"
                            ]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('Status code is 200', function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test('Game state is updated', function () {",
                                    "    const response = pm.response.json();",
                                    "    pm.expect(response.state.board).to.eql([1, 0, 0, 0, 0, 0, 0, 0, 0]);",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ]
                },
                {
                    "name": "Finish Game",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"game_session\": {\n        \"status\": \"finished\",\n        \"winner\": 0\n    }\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/game_sessions/{{game_session_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "game_sessions",
                                "{{game_session_id}}"
                            ]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('Status code is 200', function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test('Game is finished', function () {",
                                    "    const response = pm.response.json();",
                                    "    pm.expect(response.status).to.eql('finished');",
                                    "    pm.expect(response.state.winner).to.eql(0);",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ]
                },
                {
                    "name": "Leave Game",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/game_sessions/{{game_session_id}}/leave/{{player_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "game_sessions",
                                "{{game_session_id}}",
                                "leave",
                                "{{player_id}}"
                            ]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('Status code is 200', function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test('Player is removed', function () {",
                                    "    const response = pm.response.json();",
                                    "    const playerIds = response.players.map(p => p.id);",
                                    "    pm.expect(playerIds).to.not.include(parseInt(pm.environment.get('player_id')));",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ]
                },
                {
                    "name": "Cleanup Old Games",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/game_sessions/cleanup",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "game_sessions",
                                "cleanup"
                            ]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"before\": \"{{$timestamp}}\"\n}"
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('Status code is 200', function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test('Cleanup successful', function () {",
                                    "    const response = pm.response.json();",
                                    "    pm.expect(response.message).to.eql('Cleanup completed');",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ]
                }
            ]
        }
    ]
}